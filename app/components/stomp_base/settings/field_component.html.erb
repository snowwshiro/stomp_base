<div class="stomp-base-card bg-white/70 border border-purple-200 p-4">
  <div class="flex items-center mb-2">
    <svg class="w-5 h-5 text-purple-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= icon_path %>"></path>
    </svg>
    <label class="stomp-base-form-label text-sm font-semibold text-purple-700 m-0">
      <%= label %>
    </label>
  </div>
  <p class="stomp-base-form-description text-xs text-gray-500 m-0 mb-3">
    <%= description %>
  </p>
  <%= form.select field_name, 
      options_for_select(options, current_value), 
      {}, 
      { 
        class: "stomp-base-form-select w-full p-2 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
      } %>
</div>
