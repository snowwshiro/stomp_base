<!-- Form Actions -->
<div class="flex gap-3 mt-6 pt-4 border-t border-purple-200">
  <%= form.submit t('stomp_base.settings.save'), 
      class: "stomp-base-btn bg-gradient-to-br from-emerald-500 to-emerald-600 text-white border-0 py-2.5 px-5 rounded-md text-sm font-medium cursor-pointer transition-all duration-200 shadow-lg shadow-emerald-500/20" %>
  
  <%= link_to t('stomp_base.settings.reset'), 
      form_url,
      method: :delete,
      confirm: t('stomp_base.settings.reset_confirmation'),
      class: "stomp-base-btn bg-gradient-to-br from-red-500 to-red-600 text-white no-underline border-0 py-2.5 px-5 rounded-md text-sm font-medium cursor-pointer transition-all duration-200 shadow-lg shadow-red-500/20 inline-block" %>
</div>
