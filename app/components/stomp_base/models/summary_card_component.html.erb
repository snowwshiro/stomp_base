<%# Model Information Summary %>
<div class="stomp-base-dashboard-info-grid" style="margin-bottom: 0.75rem;">
  <!-- Table Info Card -->
  <div class="stomp-base-card" style="background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%); border: 1px solid #0284c7;">
    <div style="background: linear-gradient(to right, #3b82f6, #2563eb); padding: 0.75rem; margin: -1.5rem -1.5rem 0.75rem -1.5rem; border-radius: 0.75rem 0.75rem 0 0;">
      <h3 style="font-size: 0.9375rem; font-weight: 600; color: white; display: flex; align-items: center; margin: 0;">
        <svg style="width: 1rem; height: 1rem; margin-right: 0.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
        </svg>
        <%= t('stomp_base.models.table_info') %>
      </h3>
    </div>
    <div style="text-align: center;">
      <div style="font-size: 0.6875rem; color: #6b7280; margin-bottom: 0.25rem;"><%= t('stomp_base.models.table_name') %></div>
      <div style="font-size: 0.875rem; font-weight: 600; color: #111827; background-color: rgba(255,255,255,0.7); padding: 0.375rem; border-radius: 0.375rem; border: 1px solid rgba(2, 132, 199, 0.2);"><%= table_name %></div>
    </div>
  </div>

  <!-- Column Info Card -->
  <div class="stomp-base-card" style="background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%); border: 1px solid #bbf7d0;">
    <div style="background: linear-gradient(to right, #10b981, #059669); padding: 0.75rem; margin: -1.5rem -1.5rem 0.75rem -1.5rem; border-radius: 0.75rem 0.75rem 0 0;">
      <h3 style="font-size: 0.9375rem; font-weight: 600; color: white; display: flex; align-items: center; margin: 0;">
        <svg style="width: 1rem; height: 1rem; margin-right: 0.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2h2a2 2 0 002-2z"></path>
        </svg>
        <%= t('stomp_base.models.columns') %>
      </h3>
    </div>
    <div style="text-align: center;">
      <div style="font-size: 0.6875rem; color: #6b7280; margin-bottom: 0.25rem;"><%= t('stomp_base.models.column_count') %></div>
      <div style="font-size: 1.25rem; font-weight: 700; color: #059669; background-color: rgba(255,255,255,0.7); padding: 0.375rem; border-radius: 0.375rem; border: 1px solid rgba(187, 247, 208, 0.5);"><%= column_count %></div>
    </div>
  </div>

  <!-- Records Info Card -->
  <div class="stomp-base-card" style="background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%); border: 1px solid #f59e0b;">
    <div style="background: linear-gradient(to right, #f59e0b, #d97706); padding: 0.75rem; margin: -1.5rem -1.5rem 0.75rem -1.5rem; border-radius: 0.75rem 0.75rem 0 0;">
      <h3 style="font-size: 0.9375rem; font-weight: 600; color: white; display: flex; align-items: center; margin: 0;">
        <svg style="width: 1rem; height: 1rem; margin-right: 0.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <%= t('stomp_base.models.records') %>
      </h3>
    </div>
    <div style="text-align: center;">
      <div style="font-size: 0.6875rem; color: #6b7280; margin-bottom: 0.25rem;"><%= t('stomp_base.models.pagination.total') %></div>
      <div style="font-size: 1.25rem; font-weight: 700; color: #d97706; background-color: rgba(255,255,255,0.7); padding: 0.375rem; border-radius: 0.375rem; border: 1px solid rgba(245, 158, 11, 0.5);"><%= total_count %></div>
    </div>
  </div>
</div>
