<%# Models List Component Template %>
<%= render StompBase::Ui::HeaderComponent.new(
  title: t('stomp_base.models.title'),
  navigation: { show_refresh: true },
  display_options: { 
    gradient_colors: { from: '#667eea', to: '#764ba2' },
    icon: '<svg style="width: 1.25rem; height: 1.25rem; margin-right: 0.5rem; display: inline-block; vertical-align: middle;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
    </svg>'
  }
) %>

<!-- Statistics Summary -->
<div class="stomp-base-card" style="margin-bottom: 0.75rem; background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%); border: 1px solid #0284c7;">
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 0.625rem;">
    <h3 style="font-size: 0.9375rem; font-weight: 600; color: #0369a1; margin: 0; display: flex; align-items: center;">
      <svg style="width: 1rem; height: 1rem; margin-right: 0.375rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"></path>
      </svg>
      <%= t('stomp_base.models.model_information') %>
    </h3>
    <span style="font-size: 0.625rem; color: #0284c7; background-color: rgba(2, 132, 199, 0.1); padding: 0.125rem 0.25rem; border-radius: 9999px;"><%= t('stomp_base.dashboard.realtime') %></span>
  </div>
  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(120px, 1fr)); gap: 0.5rem;">
    <div style="text-align: center; padding: 0.625rem; background-color: rgba(255,255,255,0.7); border-radius: 0.5rem; border: 1px solid rgba(2, 132, 199, 0.2);">
      <div style="font-size: 1.25rem; font-weight: 700; color: #0369a1; margin-bottom: 0.125rem;"><%= models_count %></div>
      <div style="font-size: 0.625rem; color: #0284c7; font-weight: 500;"><%= t('stomp_base.models.list') %></div>
    </div>
    <div style="text-align: center; padding: 0.625rem; background-color: rgba(255,255,255,0.7); border-radius: 0.5rem; border: 1px solid rgba(2, 132, 199, 0.2);">
      <div style="font-size: 1.25rem; font-weight: 700; color: #0369a1; margin-bottom: 0.125rem;"><%= total_records %></div>
      <div style="font-size: 0.625rem; color: #0284c7; font-weight: 500;"><%= t('stomp_base.models.records') %></div>
    </div>
    <div style="text-align: center; padding: 0.625rem; background-color: rgba(255,255,255,0.7); border-radius: 0.5rem; border: 1px solid rgba(2, 132, 199, 0.2);">
      <div style="font-size: 1.25rem; font-weight: 700; color: #0369a1; margin-bottom: 0.125rem;"><%= total_columns %></div>
      <div style="font-size: 0.625rem; color: #0284c7; font-weight: 500;"><%= t('stomp_base.models.columns') %></div>
    </div>
  </div>
</div>

<!-- Models Grid -->
<% if models.any? %>
  <div class="stomp-base-dashboard-info-grid">
    <% models.each do |model| %>
      <div class="stomp-base-card-compact" style="background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%); border: 1px solid #f59e0b;">
        <div style="display: flex; align-items: center; margin-bottom: 0.75rem;">
          <div style="padding: 0.625rem; background: linear-gradient(135deg, #f59e0b, #d97706); border-radius: 0.625rem; box-shadow: 0 4px 6px -1px rgba(245, 158, 11, 0.2);">
            <svg style="width: 1.25rem; height: 1.25rem; color: white;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
          </div>
          <div style="margin-left: 0.75rem;">
            <h4 style="font-size: 1.125rem; font-weight: 600; color: #111827; margin: 0 0 0.25rem 0;"><%= model[:name] %></h4>
            <div style="display: flex; align-items: center; gap: 0.5rem;">
              <span style="font-size: 0.75rem; color: #d97706; font-weight: 500;"><%= model[:table_name] %></span>
            </div>
          </div>
        </div>

        <!-- Model Statistics -->
        <div style="margin-bottom: 1rem; display: grid; grid-template-columns: 1fr 1fr; gap: 0.75rem;">
          <div style="text-align: center; padding: 0.75rem; background-color: rgba(255,255,255,0.5); border-radius: 0.5rem;">
            <div style="font-size: 0.75rem; color: #6b7280; margin-bottom: 0.25rem;"><%= t('stomp_base.models.columns') %></div>
            <div style="font-size: 0.875rem; font-weight: 600; color: #111827;"><%= model[:column_count] %></div>
          </div>
          <div style="text-align: center; padding: 0.75rem; background-color: rgba(255,255,255,0.5); border-radius: 0.5rem;">
            <div style="font-size: 0.75rem; color: #6b7280; margin-bottom: 0.25rem;"><%= t('stomp_base.models.records') %></div>
            <div style="font-size: 0.875rem; font-weight: 600; color: #111827;"><%= model[:record_count] %></div>
          </div>
        </div>

        <!-- Action Button -->
        <a href="<%= helpers.stomp_base.model_path(model[:name]) %>" class="stomp-base-btn" style="display: inline-flex; align-items: center; background: linear-gradient(135deg, #f59e0b, #d97706); color: white; width: 100%; justify-content: center; box-shadow: 0 2px 4px rgba(245, 158, 11, 0.2);">
          <%= t('stomp_base.models.view_details') %>
          <svg style="width: 1rem; height: 1rem; margin-left: 0.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    <% end %>
  </div>
<% else %>
  <!-- No Models Found -->
  <div class="stomp-base-card" style="text-align: center; background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%); border: 1px solid #e2e8f0;">
    <div style="padding: 3rem;">
      <svg style="width: 4rem; height: 4rem; color: #6b7280; margin: 0 auto 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
      </svg>
      <h3 style="font-size: 1.125rem; font-weight: 600; color: #111827; margin-bottom: 0.5rem;"><%= t('stomp_base.models.no_models') %></h3>
      <p style="font-size: 0.875rem; color: #6b7280; margin: 0;"><%= t('stomp_base.models.no_models_message') %></p>
    </div>
  </div>
<% end %>
