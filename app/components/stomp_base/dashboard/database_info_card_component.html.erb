<!-- Database Info Card -->
<div class="stomp-base-card">
  <div class="bg-gradient-to-r from-emerald-500 to-emerald-600 p-3 -m-3.5 mb-3 rounded-t-lg">
    <h3 class="text-sm font-semibold text-white flex items-center m-0">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
      </svg>
      <%= t('stomp_base.dashboard.database_info') %>
    </h3>
  </div>
  <div class="py-1.5">
    <div class="text-center mb-2.5">
      <div class="text-xs text-gray-500"><%= t('stomp_base.dashboard.database') %></div>
      <div class="text-sm font-semibold text-gray-900"><%= system_info[:database] %></div>
    </div>
    <div class="grid grid-cols-2 gap-2.5 text-center">
      <div>
        <div class="text-xs text-gray-500"><%= t('stomp_base.dashboard.adapter') %></div>
        <div class="text-sm font-semibold text-gray-900"><%= system_info[:adapter] %></div>
      </div>
      <div>
        <div class="text-xs text-gray-500"><%= t('stomp_base.dashboard.tables') %></div>
        <div class="text-sm font-semibold text-gray-900"><%= system_info[:tables] %></div>
      </div>
    </div>
  </div>
</div>
