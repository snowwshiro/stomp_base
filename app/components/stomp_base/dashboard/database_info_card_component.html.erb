<!-- Database Info Card -->
<div class="stomp-base-card">
  <div style="background: linear-gradient(to right, #10b981, #059669); padding: 0.75rem; margin: -0.875rem -0.875rem 0.75rem -0.875rem; border-radius: 0.5rem 0.5rem 0 0;">
    <h3 style="font-size: 0.9375rem; font-weight: 600; color: white; display: flex; align-items: center; margin: 0;">
      <svg style="width: 1rem; height: 1rem; margin-right: 0.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
      </svg>
      <%= t('stomp_base.dashboard.database_info') %>
    </h3>
  </div>
  <div style="padding: 0.375rem 0;">
    <div style="text-align: center; margin-bottom: 0.625rem;">
      <div style="font-size: 0.6875rem; color: #6b7280;"><%= t('stomp_base.dashboard.database') %></div>
      <div style="font-size: 0.8125rem; font-weight: 600; color: #111827;"><%= system_info[:database] %></div>
    </div>
    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 0.625rem; text-align: center;">
      <div>
        <div style="font-size: 0.6875rem; color: #6b7280;"><%= t('stomp_base.dashboard.adapter') %></div>
        <div style="font-size: 0.8125rem; font-weight: 600; color: #111827;"><%= system_info[:adapter] %></div>
      </div>
      <div>
        <div style="font-size: 0.6875rem; color: #6b7280;"><%= t('stomp_base.dashboard.tables') %></div>
        <div style="font-size: 0.8125rem; font-weight: 600; color: #111827;"><%= system_info[:tables] %></div>
      </div>
    </div>
  </div>
</div>
