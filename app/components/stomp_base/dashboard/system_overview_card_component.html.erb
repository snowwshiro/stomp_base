<!-- System Overview Card -->
<div class="stomp-base-card stomp-base-system-overview">
  <div style="background: linear-gradient(to right, #3b82f6, #2563eb); padding: 0.75rem; margin: -0.875rem -0.875rem 0.75rem -0.875rem; border-radius: 0.5rem 0.5rem 0 0;">
    <h3 style="font-size: 0.9375rem; font-weight: 600; color: white; display: flex; align-items: center; margin: 0;">
      <svg style="width: 1rem; height: 1rem; margin-right: 0.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
      </svg>
      <%= t('stomp_base.dashboard.core_system') %>
    </h3>
  </div>
  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(110px, 1fr)); gap: 0.75rem;">
    <div style="text-align: center; padding: 0.625rem;">
      <div style="font-size: 0.6875rem; color: #6b7280; margin-bottom: 0.1875rem;"><%= t('stomp_base.dashboard.rails_version') %></div>
      <div class="stomp-base-badge" style="background-color: #eff6ff; color: #1d4ed8; border-color: #dbeafe; font-size: 0.6875rem; padding: 0.25rem 0.5rem;"><%= system_info[:rails_version] %></div>
    </div>
    <div style="text-align: center; padding: 0.625rem;">
      <div style="font-size: 0.6875rem; color: #6b7280; margin-bottom: 0.1875rem;"><%= t('stomp_base.dashboard.ruby_version') %></div>
      <div class="stomp-base-badge" style="background-color: #f0fdf4; color: #166534; border-color: #bbf7d0; font-size: 0.6875rem; padding: 0.25rem 0.5rem;"><%= system_info[:ruby_version] %></div>
    </div>
    <div style="text-align: center; padding: 0.625rem;">
      <div style="font-size: 0.6875rem; color: #6b7280; margin-bottom: 0.1875rem;"><%= t('stomp_base.dashboard.environment') %></div>
      <div class="stomp-base-badge <%= environment_badge_color %>" style="font-size: 0.6875rem; padding: 0.25rem 0.5rem;">
        <%= system_info[:environment].capitalize %>
      </div>
    </div>
  </div>
</div>
