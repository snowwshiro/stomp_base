<!-- Welcome Section -->
<div class="stomp-base-card" style="margin-bottom: 0.75rem; text-align: center; background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%); border: 1px solid #e2e8f0;">
  <div style="display: flex; align-items: center; justify-content: center; margin-bottom: 0.5rem;">
    <svg style="width: 1.5rem; height: 1.5rem; color: #3b82f6; margin-right: 0.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
    </svg>
    <h2 style="font-size: 1.125rem; font-weight: 700; color: #111827; margin: 0;">
      <%= t('stomp_base.dashboard.welcome_message') %>
    </h2>
  </div>
  <p style="font-size: 0.8125rem; color: #6b7280; margin: 0; max-width: 500px; margin-left: auto; margin-right: auto;">
    <%= t('stomp_base.dashboard.description') %>
  </p>
</div>
