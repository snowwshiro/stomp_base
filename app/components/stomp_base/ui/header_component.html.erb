<%# Header with Navigation %>
<header class="stomp-base-card mb-3 border-0 text-white" style="<%= gradient_style %>">
  <div class="stomp-base-nav-container">
    <div class="stomp-base-nav-content py-2">
      <div class="flex items-center gap-4">
        <% if back_path %>
          <a href="<%= back_path %>" class="text-white/90 no-underline flex items-center text-sm">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            <%= back_label || t('stomp_base.common.back') %>
          </a>
        <% end %>
        <h1 class="stomp-base-nav-title text-xl text-white m-0" style="text-shadow: 0 2px 4px rgba(0,0,0,0.3);">
          <% if icon %>
            <%= icon.html_safe %>
          <% end %>
          <%= title %>
        </h1>
      </div>
      <div class="flex items-center gap-3.5">
        <div class="flex items-center gap-2">
          <div class="stomp-base-status-indicator status-active"></div>
          <div class="text-xs text-white/90">
            <%= status_message || default_status_message %>
          </div>
        </div>
        <% if custom_button %>
          <%= custom_button.html_safe %>
        <% elsif show_refresh %>
          <button onclick="window.location.reload()" class="stomp-base-btn inline-flex items-center py-1.5 px-2.5 text-xs bg-white/20 text-white border border-white/30 backdrop-blur-sm">
            <svg class="w-3 h-3 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
            <%= t('stomp_base.dashboard.refresh_info') %>
          </button>
        <% end %>
      </div>
    </div>
  </div>
</header>
