<!-- Security Warning -->
<% if production? %>
  <div class="stomp-base-card <%= environment_warning_color %>" style="margin-bottom: 0.75rem; border-width: 2px;">
    <div style="display: flex; align-items: center;">
      <svg style="width: 1.25rem; height: 1.25rem; margin-right: 0.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.728-.833-2.498 0L4.316 15.5c-.77.833.192 2.5 1.732 2.5z"></path>
      </svg>
      <div>
        <h3 style="font-weight: 600; margin: 0; margin-bottom: 0.25rem;"><%= t('stomp_base.console.warning') %></h3>
        <p style="margin: 0; font-size: 0.875rem;"><%= t('stomp_base.console.security_notice') %></p>
      </div>
    </div>
  </div>
<% else %>
  <div class="stomp-base-card <%= environment_warning_color %>" style="margin-bottom: 0.75rem;">
    <div style="display: flex; align-items: center;">
      <svg style="width: 1rem; height: 1rem; margin-right: 0.5rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <p style="margin: 0; font-size: 0.875rem;"><%= t('stomp_base.console.security_notice') %></p>
    </div>
  </div>
<% end %>
