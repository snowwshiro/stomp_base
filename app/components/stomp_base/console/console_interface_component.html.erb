<!-- Console Interface -->
<div class="stomp-base-card mb-3">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-lg font-semibold text-gray-900 m-0 flex items-center">
      <svg class="w-5 h-5 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
      </svg>
      <%= t('stomp_base.console.title') %>
    </h2>
    <div style="display: flex; gap: 0.5rem;">
      <button onclick="clearConsoleHistory()" class="stomp-base-btn" style="padding: 0.375rem 0.75rem; font-size: 0.8125rem; background-color: #f3f4f6; color: #374151; border: 1px solid #d1d5db;">
        <%= t('stomp_base.console.clear_history') %>
      </button>
    </div>
  </div>

  <!-- Console Input -->
  <div style="margin-bottom: 1rem;">
    <div style="display: flex; gap: 0.75rem; align-items: flex-start;">
      <div style="flex: 1; min-width: 0;">
        <textarea 
          id="console-input" 
          placeholder="<%= t('stomp_base.console.placeholder') %>"
          style="width: 100%; min-height: 80px; padding: 0.75rem; border: 2px solid #e5e7eb; border-radius: 0.5rem; font-family: 'Courier New', monospace; font-size: 0.875rem; background-color: #f9fafb; resize: vertical; box-sizing: border-box;"
          onkeydown="handleConsoleKeydown(event)"
        ></textarea>
      </div>
      <button 
        onclick="executeConsoleCommand()" 
        class="stomp-base-btn" 
        style="padding: 0.75rem 1rem; background-color: #3b82f6; color: white; border: 1px solid #3b82f6; border-radius: 0.5rem; display: flex; align-items: center; gap: 0.5rem; flex-shrink: 0; white-space: nowrap; height: fit-content;"
      >
        <svg style="width: 1rem; height: 1rem;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
        </svg>
        <%= t('stomp_base.console.execute') %>
      </button>
    </div>
  </div>

  <!-- Console Output -->
  <div>
    <h3 style="font-size: 1rem; font-weight: 600; color: #374151; margin: 0; margin-bottom: 0.5rem;"><%= t('stomp_base.console.output') %></h3>
    <div 
      id="console-output" 
      style="min-height: 200px; max-height: 400px; overflow-y: auto; padding: 1rem; background-color: #1f2937; color: #f9fafb; border-radius: 0.5rem; font-family: 'Courier New', monospace; font-size: 0.875rem; white-space: pre-wrap;"
    >
      <div style="color: #9ca3af; font-style: italic;"><%= t('stomp_base.console.no_output') %></div>
    </div>
  </div>
</div>
