<!-- Console Interface -->
<div class="stomp-base-card mb-3">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-lg font-semibold text-gray-900 m-0 flex items-center">
      <svg class="w-5 h-5 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
      </svg>
      <%= t('stomp_base.console.title') %>
    </h2>
    <div class="flex gap-2">
      <button onclick="clearConsoleHistory()" class="stomp-base-btn py-1.5 px-3 text-xs bg-gray-100 text-gray-600 border border-gray-300">
        <%= t('stomp_base.console.clear_history') %>
      </button>
    </div>
  </div>

  <!-- Console Input -->
  <div class="mb-4">
    <div class="flex gap-3 items-start">
      <div class="flex-1 min-w-0">
        <textarea 
          id="console-input" 
          placeholder="<%= t('stomp_base.console.placeholder') %>"
          class="w-full min-h-[80px] p-3 border-2 border-gray-200 rounded-lg font-mono text-sm bg-gray-50 resize-y box-border focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 focus:outline-none"
          onkeydown="handleConsoleKeydown(event)"
        ></textarea>
      </div>
      <button 
        onclick="executeConsoleCommand()" 
        class="stomp-base-btn" 
        class="stomp-base-btn p-3 bg-blue-500 text-white border border-blue-500 rounded-lg flex items-center gap-2 flex-shrink-0 whitespace-nowrap h-fit hover:bg-blue-600 transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
        </svg>
        <%= t('stomp_base.console.execute') %>
      </button>
    </div>
  </div>

  <!-- Console Output -->
  <div>
    <h3 class="text-base font-semibold text-gray-600 m-0 mb-2"><%= t('stomp_base.console.output') %></h3>
    <div 
      id="console-output" 
      class="min-h-[200px] max-h-[400px] overflow-y-auto p-4 bg-gray-800 text-gray-100 rounded-lg font-mono text-sm whitespace-pre-wrap"
    >
      <div class="text-gray-400 italic"><%= t('stomp_base.console.no_output') %></div>
    </div>
  </div>
</div>
