<%= render StompBase::LayoutComponent.new(
  title: t('stomp_base.settings.title'),
  breadcrumbs: [
    { name: t('stomp_base.navigation.dashboard'), url: stomp_base.root_path },
    { name: t('stomp_base.settings.title'), url: nil }
  ]
) do %>
  <%= render StompBase::Pages::SettingsComponent.new(
    current_locale: session[:stomp_base_locale] || I18n.default_locale,
    current_theme: session[:stomp_base_theme] || 'light'
  ) %>

  <% if flash[:notice] %>
    <div style="background: #d4edda; color: #155724; padding: 1rem; margin-top: 1rem; border-radius: 4px;">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div style="background: #f8d7da; color: #721c24; padding: 1rem; margin-top: 1rem; border-radius: 4px;">
      <%= flash[:alert] %>
    </div>
  <% end %>
<% end %>
